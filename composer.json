{
  "name": "rarus/bonus-server-php-sdk",
  "description": "Bonus server PHP SDK",
  "keywords": [
    "Rarus",
    "PHP",
    "REST",
    "API"
  ],
  "type": "library",
  "homepage": "https://rarus.ru",
  "license": "MIT",
  "authors": [
    {
      "name": "Anastasiya Daragan",
      "email": "eran@rarus.ru",
      "homepage": "https://rarus.ru"
    }
  ],
  "require": {
    "php": ">=5.5",
    "ext-json": "*",
    "ext-curl": "*",
    "psr/log": "^1.0",
    "monolog/monolog": "1.*",
    "guzzlehttp/guzzle": "6.x"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "0.9",
    "jakub-onderka/php-console-highlighter": "~0.3",
    "phpunit/phpunit": "~4.8",
    "phpunit/phpunit-mock-objects": "2.3.0"
  },
  "autoload": {
    "psr-4": {
      "Rarus\\BonusServer\\": "src/BonusServer"
    }
  },
  "scripts": {
    "test": [
      "parallel-lint . --exclude vendor --no-colors",
      "phpunit --colors=always --verbose"
    ]
  }
}